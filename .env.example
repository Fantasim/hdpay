# HDPay Configuration
# Copy to .env and fill in values

# Path to file containing 24-word BIP-39 mnemonic
HDPAY_MNEMONIC_FILE=/path/to/mnemonic.txt

# SQLite database path
HDPAY_DB_PATH=./data/hdpay.sqlite

# Server port (localhost-only)
HDPAY_PORT=8080

# Log level: debug, info, warn, error
HDPAY_LOG_LEVEL=info

# Log directory for daily rotated files
HDPAY_LOG_DIR=./logs

# Network: mainnet, testnet
HDPAY_NETWORK=mainnet

# API Keys (free tier)
HDPAY_BSCSCAN_API_KEY=
HDPAY_HELIUS_API_KEY=

# Optional overrides
HDPAY_BTC_FEE_RATE=10
HDPAY_BSC_GAS_PRESEED_WEI=5000000000000000
